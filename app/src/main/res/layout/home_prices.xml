<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:theme="@style/WhiteText"
    tools:showIn="@layout/fragment_home">

    <TextView
        android:id="@+id/tickets_head"
        android:text="@string/tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:textAlignment="center"
        android:textSize="32sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:flexWrap="wrap"
        app:justifyContent="center">

        <LinearLayout
            android:id="@+id/early_professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="64dp"
                android:layout_width="144dp"
                android:text="@string/professional_early_bird"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="24sp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/professional_early_price"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="60sp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="18sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_end_date"
                android:textColor="@color/colorPrimaryLight"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/early_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="64dp"
                android:layout_width="144dp"
                android:text="@string/student_early_bird"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="24sp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/early_student_price"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="60sp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="18sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_end_date"
                android:textColor="@color/colorPrimaryLight"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="64dp"
                android:layout_width="144dp"
                android:text="@string/professional"
                android:textSize="24sp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/professional_price"
                    android:textSize="60sp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd"
                    android:textSize="18sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="64dp"
                android:layout_width="144dp"
                android:text="@string/student"
                android:textSize="24sp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/student_price"
                    android:textSize="60sp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd"
                    android:textSize="18sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:id="@+id/tickets_foot"
        android:text="@string/tickets_foot"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:textAlignment="center"
        android:textSize="12sp" />
    <Button
        android:id="@+id/tickets_button"
        android:text="@string/buy_your_ticket"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openWebpage"
        android:tag="@string/eventbrite_url"
        android:layout_marginBottom="@dimen/nav_header_vertical_spacing"/>
</LinearLayout>